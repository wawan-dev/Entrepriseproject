@model IEnumerable<Entrepriseproject.Models.Entreprise>



@{
    ViewData["Title"] = "Liste des entreprises";
}

<div class="container mt-5">
    <h1 class="mb-4">Liste des entreprises</h1>

    <!-- Formulaire de recherche -->
    <form asp-action="Recherche" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-8">
                <input type="text" name="query" class="form-control" placeholder="Rechercher par nom, addresse ou siret" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">Rechercher</button>
            </div>
        </div>
    </form>

    <!-- Tableau des entreprises -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nom</th>
                    <th>Siren</th>
                    <th>Siret</th>
                    <th>Adresse</th>
                    <th>Catégorie</th>
                    <th>Coordonnées</th>
                    <th>Dirigeant</th>
                    <th>Activité</th>
                    <th>Pays</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entreprise in Model)
                {
                    <tr>
                        <td>@entreprise.Nom</td>
                        <td>@entreprise.Siren</td>
                        <td>@entreprise.Siret</td>
                        <td>@entreprise.Adresse</td>
                        <td>@entreprise.CategorieEntreprise</td>
                        <td>@entreprise.Coordonnees</td>
                        <td>@entreprise.Dirigeants</td>
                        <td>@entreprise.Activite</td>
                        <td>@entreprise.Pays</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
